<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <ImageView
        android:background="#000000"
        android:id="@+id/iv_tpi_news_listview_item_pic"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:padding="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/pic_item_list_default" />

    <TextView
        android:id="@+id/tv_tpi_news_listview_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"

        android:layout_toRightOf="@id/iv_tpi_news_listview_item_pic"
        android:text="的扩大极乐空间费德勒咖啡店范德萨范德萨" />

    <TextView
        android:id="@+id/tv_tpi_news_listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tpi_news_listview_item_title"
        android:layout_below="@id/tv_tpi_news_listview_item_title"

        android:text="2014-11-11 11:11" />

    <ImageView

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_tpi_news_listview_item_icon"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_news_comment_num"
        android:layout_height="wrap_content" />

</RelativeLayout>